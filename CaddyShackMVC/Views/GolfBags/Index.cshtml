﻿
<link href='https://unpkg.com/css.gg@2.0.0/icons/css/trash.css' rel='stylesheet'>

@model List<GolfBag>

<h1>All Golf Bags</h1>
<form action="/golfbags/new">
    <button class="create" type="submit">Don't see your bag?</button>
</form>
<br />
<br />

@foreach(var e in Model)
{
    <form method="post" action="/golfbags/delete/@e.Id">
        <button type="submit" onclick="return confirm('Are you sure you want to delete this bag?')" ><i class="gg-trash"></i></button>
    </form>

    <h5>@e.Id: <a href="/golfbags/@e.Id">@e.Player</a>, @e.Capacity</h5>
}
